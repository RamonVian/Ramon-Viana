algoritmo "exercicio 4"
// Função :
// Autor :
// Data : 16/11/2022
// Seção de Declarações 
var
numero:inteiro
antecessor:inteiro
sucessor:inteiro
inicio
escreva("Qual o numero?")
leia(numero)
antecessor <- numero - 1
sucessor <- numero +1
escreval("O sucessor de ",numero," é ",sucessor)
escreva("O antecessor de ",numero," é ",antecessor)
fimalgoritmo
